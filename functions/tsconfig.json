{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "compileOnSave": true,
  "include": [
    "**/*.ts", "**/*.tsx"
  ],
  "exclude": [ "node_modules", "build" ],
}
